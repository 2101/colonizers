{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },

    "rules": {
        "no-underscore-dangle": 0,

        "quotes": [2, "single"],
        "strict": [2, "global"],

        "consistent-return": 0,

        "space-in-parens": [2, "never"],
        "indent": [2, 2],
        "linebreak-style": [2, "unix"]
    }
}
